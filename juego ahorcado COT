<body>
    <h1>‚ö†Ô∏è Ahorcado: Depresi√≥n y Riesgo Psicosocial</h1>
    <div id="juego">
        <div id="temporizador">‚è±Ô∏è Tiempo: <span id="tiempo">60</span>s</div>
        <div id="imagen-ahorcado">üòä</div>
        <div id="palabra"></div>
        <div id="letras-usadas">Letras usadas: </div>
        <div id="vidas">‚ù§Ô∏è Vidas: 6</div>
        <div id="puntos">‚≠ê Puntos: 0</div>
        <input type="text" id="letra" maxlength="1" placeholder="Escribe una letra">
        <button onclick="adivinarLetra()">Intentar</button>
        
        <div id="pregunta" style="display: none;">
            <h3 id="texto-pregunta"></h3>
            <div id="opciones"></div>
            <button onclick="responderPregunta()">Responder</button>
        </div>
        
        <div id="final">
            <h2 id="mensaje-final"></h2>
            <p id="puntos-final"></p>
            <h3>üìö Recursos de Ayuda:</h3>
            <p>La depresi√≥n laboral es un riesgo psicosocial reconocido por la OIT. Busca ayuda si:</p>
            <ul style="text-align: left;">
                <li>Sientes fatiga cr√≥nica o desmotivaci√≥n.</li>
                <li>Experimentas acoso laboral (mobbing).</li>
                <li>Tienes dificultad para desconectar del trabajo.</li>
            </ul>
            <p>üîó M√°s informaci√≥n: <a href="https://www.who.int/es/health-topics/depression" target="_blank" style="color: white;">OMS - Depresi√≥n</a></p>
        </div>
    </div>

    <script>
        // Palabras y preguntas
        const palabras = [
            {
                palabra: "DEPRESION",
                pregunta: "¬øCu√°l es un s√≠ntoma com√∫n de la depresi√≥n en el trabajo?",
                opciones: [
                    "Alta productividad constante",
                    "Fatiga cr√≥nica y desmotivaci√≥n",
                    "Exceso de energ√≠a"
                ],
                respuesta: 1
            },
            {
                palabra: "ACOSO",
                pregunta: "¬øEl acoso laboral puede ser un factor de riesgo psicosocial?",
                opciones: [
                    "No, solo afecta el rendimiento",
                    "S√≠, aumenta ansiedad y depresi√≥n",
                    "Solo si es f√≠sico"
                ],
                respuesta: 1
            },
            {
                palabra: "ESTRES",
                pregunta: "¬øEl estr√©s laboral prolongado puede derivar en depresi√≥n?",
                opciones: [
                    "Nunca",
                    "Solo en casos extremos",
                    "S√≠, es un detonante com√∫n"
                ],
                respuesta: 2
            },
            {
                palabra: "AISLAMIENTO",
                pregunta: "¬øPor qu√© el aislamiento social agrava la depresi√≥n?",
                opciones: [
                    "Reduce redes de apoyo emocional",
                    "Mejora la concentraci√≥n",
                    "No tiene relaci√≥n"
                ],
                respuesta: 0
            },
            {
                palabra: "AUTOESTIMA",
                pregunta: "¬øC√≥mo afecta la baja autoestima en el trabajo?",
                opciones: [
                    "Aumenta la productividad",
                    "Disminuye la capacidad para manejar presi√≥n",
                    "No influye"
                ],
                respuesta: 1
            }
        ];

        // Variables del juego
        let palabraActual;
        let palabraAdivinada;
        let letrasUsadas = [];
        let vidas = 6;
        let puntos = 0;
        let temporizador;
        let tiempo = 60;
        let indicePalabra = 0;

        // Iniciar juego
        function iniciarJuego() {
            if (indicePalabra >= palabras.length) {
                terminarJuego(true);
                return;
            }
            
            palabraActual = palabras[indicePalabra].palabra;
            palabraAdivinada = Array(palabraActual.length).fill('_');
            letrasUsadas = [];
            vidas = 6;
            tiempo = 60;
            
            actualizarInterfaz();
            document.getElementById('pregunta').style.display = 'none';
            document.getElementById('letra').value = '';
            document.getElementById('letra').focus();
            
            // Temporizador
            clearInterval(temporizador);
            temporizador = setInterval(() => {
                tiempo--;
                document.getElementById('tiempo').textContent = tiempo;
                
                if (tiempo <= 0) {
                    clearInterval(temporizador);
                    perderVida();
                }
            }, 1000);
        }

        // Actualizar interfaz
        function actualizarInterfaz() {
            document.getElementById('palabra').textContent = palabraAdivinada.join(' ');
            document.getElementById('letras-usadas').textContent = 'Letras usadas: ' + letrasUsadas.join(', ');
            document.getElementById('vidas').textContent = '‚ù§Ô∏è Vidas: ' + vidas;
            document.getElementById('puntos').textContent = '‚≠ê Puntos: ' + puntos;
            
            // Actualizar imagen del ahorcado
            const imagenes = ["üòä", "üòü", "üò®", "üò∞", "üò•", "üòì", "üòµ"];
            document.getElementById('imagen-ahorcado').textContent = imagenes[6 - vidas];
        }

        // Adivinar letra
        function adivinarLetra() {
            const letraInput = document.getElementById('letra');
            const letra = letraInput.value.toUpperCase();
            
            if (!letra || letrasUsadas.includes(letra)) {
                alert('¬°Letra no v√°lida o ya usada!');
                return;
            }
            
            letrasUsadas.push(letra);
            
            if (palabraActual.includes(letra)) {
                // Letra correcta
                for (let i = 0; i < palabraActual.length; i++) {
                    if (palabraActual[i] === letra) {
                        palabraAdivinada[i] = letra;
                    }
                }
                
                // Verificar si adivin√≥ toda la palabra
                if (!palabraAdivinada.includes('_')) {
                    clearInterval(temporizador);
                    puntos += 10;
                    mostrarPregunta();
                }
            } else {
                // Letra incorrecta
                perderVida();
            }
            
            actualizarInterfaz();
            letraInput.value = '';
        }

        // Perder vida
        function perderVida() {
            vidas--;
            actualizarInterfaz();
            
            if (vidas <= 0) {
                clearInterval(temporizador);
                terminarJuego(false);
            }
        }

        // Mostrar pregunta
        function mostrarPregunta() {
            const pregunta = palabras[indicePalabra];
            document.getElementById('texto-pregunta').textContent = pregunta.pregunta;
            
            const opcionesDiv = document.getElementById('opciones');
            opcionesDiv.innerHTML = '';
            
            pregunta.opciones.forEach((opcion, index) => {
                const radio = document.createElement('input');
                radio.type = 'radio';
                radio.name = 'opcion';
                radio.value = index;
                radio.id = 'opcion' + index;
                
                const label = document.createElement('label');
                label.htmlFor = 'opcion' + index;
                label.textContent = opcion;
                
                opcionesDiv.appendChild(radio);
                opcionesDiv.appendChild(label);
                opcionesDiv.appendChild(document.createElement('br'));
            });
            
            document.getElementById('pregunta').style.display = 'block';
        }

        // Responder pregunta
        function responderPregunta() {
            const seleccionado = document.querySelector('input[name="opcion"]:checked');
            
            if (!seleccionado) {
                alert('¬°Selecciona una opci√≥n!');
                return;
            }
            
            const respuesta = parseInt(seleccionado.value);
            const pregunta = palabras[indicePalabra];
            
            if (respuesta === pregunta.respuesta) {
                puntos += 5;
                document.getElementById('puntos').textContent = '‚≠ê Puntos: ' + puntos;
            }
            
            indicePalabra++;
            iniciarJuego();
        }

        // Terminar juego
        function terminarJuego(ganador) {
            clearInterval(temporizador);
            
            const finalDiv = document.getElementById('final');
            finalDiv.style.display = 'block';
            
            if (ganador) {
                document.getElementById('mensaje-final').textContent = 'üéâ ¬°Felicidades! Has completado el juego.';
            } else {
                document.getElementById('mensaje-final').textContent = 'üò¢ Game Over. Sigue aprendiendo sobre el tema.';
            }
            
            document.getElementById('puntos-final').textContent = 'Puntuaci√≥n final: ' + puntos + ' puntos';
            document.getElementById('juego').style.display = 'none';
        }

        // Iniciar al cargar la p√°gina
        window.onload = iniciarJuego;
    </script>
</body>
</html>
