        h1 {
            color: #2c3e50;
        }
        #juego {
            margin: 20px auto;
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        #palabra {
            font-size: 2em;
            letter-spacing: 10px;
            margin: 20px 0;
        }
        #letras-usadas {
            color: #7f8c8d;
            margin: 10px 0;
        }
        #vidas {
            font-size: 1.2em;
            color: #e74c3c;
        }
        #puntos {
            font-size: 1.2em;
            color: #2ecc71;
        }
        #temporizador {
            font-size: 1.5em;
            color: #3498db;
            margin: 10px 0;
        }
        button {
            background: #3498db;
            color: white;
